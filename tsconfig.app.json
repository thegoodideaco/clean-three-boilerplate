{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/*.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/**/*.vue",
    "src/**/*.ts",
    "src/**/**/*.ts",
    "node_modules/@types/*",
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    // "target": "ES2016",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    // "emitDecoratorMetadata": true,
    "allowImportingTsExtensions": true,
    // "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  }
}